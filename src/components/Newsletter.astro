<section class="relative py-16 sm:py-24">
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-zinc-950 [mask-image:radial-gradient(transparent,white)] opacity-50"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 aspect-square w-1/2 rounded-full bg-indigo-500/20 blur-3xl"></div>
  </div>
  
  <div class="relative mx-auto max-w-7xl px-6 sm:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Stay updated on our progress</h2>
      <p class="mt-4 text-lg leading-8 text-zinc-400">
        Join our newsletter to get early access, product updates, and be the first to know when we launch.
      </p>
      <form class="mt-10">
        <div class="flex max-w-md mx-auto gap-x-4">
          <label for="email-address" class="sr-only">Email address</label>
          <input
            id="email-address"
            name="email"
            type="email"
            autocomplete="email"
            required
            class="min-w-0 flex-auto rounded-full border-0 bg-zinc-800/50 px-4 py-2 text-white shadow-sm ring-1 ring-inset ring-zinc-700 placeholder:text-zinc-500 focus:ring-2 focus:ring-inset focus:ring-indigo-500 text-sm leading-6"
            placeholder="Enter your email"
          />
          <button
            type="submit"
            class="flex-none rounded-full bg-indigo-500 px-6 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500"
          >
            Subscribe
          </button>
        </div>
      </form>
    </div>
  </div>
</section> 