---
import '../assets/styles/app.css';
import Posthog from '../components/Posthog.astro';
interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'Mailflare - Open Source Email Infrastructure Platform',
	description = 'Enterprise-grade email delivery platform with intelligent routing, analytics, and seamless integration. Self-host or use our cloud solution.'
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="theme-color" content="#18181B" />
		
		<!-- Security -->
		<meta http-equiv="X-Content-Type-Options" content="nosniff" />
		<meta http-equiv="X-Frame-Options" content="DENY" />
		<meta name="referrer" content="strict-origin" />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content="email infrastructure, email delivery, smtp, email routing, newsletter, email analytics, open source" />
		<meta name="author" content="Mailflare" />
		<link rel="canonical" href="https://mailflare.co" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://mailflare.co" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/og-image.png" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://mailflare.co" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="/og-image.png" />
		<meta name="twitter:creator" content="@mailflareio" />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

		<!-- Favicons -->
		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="mailflare" />
		<link rel="manifest" href="/site.webmanifest" />
	</head>
	<body class="bg-zinc-950 text-zinc-100 antialiased">
		<slot />

		<Posthog />
	</body>
</html>
